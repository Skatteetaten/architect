{
    "kind": "BuildConfig",
    "apiVersion": "v1",
    "metadata": {
        "name": "architect",
        "labels": {
            "name": "architect"
        },
        "annotations": {
        }
    },
    "spec": {
        "triggers": [
            {
                "imageChange": {
                    "from": {
                        "kind": "ImageStreamTag",
                        "name": "cotterpin:prod",
                        "namespace": "openshift"
                    }
                },
                "type": "ImageChange"
            }
        ],
        "runPolicy": "Serial",
        "source": {
            "type": "Git",
            "git": {
                "uri": "https://github.com/Skatteetaten/architect.git"
            }
        },
        "strategy": {
            "type": "Custom",
            "customStrategy": {
                "from": {
                    "kind": "ImageStreamTag",
                    "name": "cotterpin:prod",
                    "namespace": "openshift"
                },
                "env": [
                    {
                        "name": "GO_PACKAGE",
                        "value": "github.com/skatteetaten/architect"
                    },
                    {
                        "name": "PUSH_EXTRA_TAGS",
                        "value": "latest major minor patch"
                    }
                ],
                "exposeDockerSocket": true
            }
        },
        "output": {
            "to": {
                "kind": "DockerImage",
                "name": "docker-registry.aurora.sits.no:5000/aurora/architect"
            }
        }
    }
}
